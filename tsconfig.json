{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2015",
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true, 
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}